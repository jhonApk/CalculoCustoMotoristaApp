        <TextView
            android:id="@+id/txt_salario1Alugado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 5.000"
            android:textColor="#FFC107"
            android:layout_marginTop="8sp"
            android:layout_marginStart="8sp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txt_salarioAlugado"
            app:layout_constraintTop_toBottomOf="@+id/txt_total1Alugado" />

        <TextView
            android:id="@+id/txt_kmRodado1Alugado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginStart="8sp"
            android:text="6000 km"
            android:textColor="#FFC107"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txt_kmRodadoAlugado"
            app:layout_constraintTop_toBottomOf="@+id/txt_salario1Alugado" />

        <TextView
            android:id="@+id/txt_aceitarKm1Alugado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:layout_marginTop="7sp"
            android:text="R$ 1.80/km"
            android:textColor="#FFC107"
            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/txt_aceitarKmAlugado"
            app:layout_constraintTop_toBottomOf="@+id/txt_kmRodado1Alugado" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>