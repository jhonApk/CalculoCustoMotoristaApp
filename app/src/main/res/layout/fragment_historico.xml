            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:textSize="14sp"
            android:layout_marginTop="8sp"
            android:text="Para ter um salario de: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_totalAlugado" />

        <TextView
            android:id="@+id/txt_kmRodadoAlugado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginStart="16sp"
            android:textSize="14sp"
            android:text="Rodando um Total de: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_salarioAlugado" />

        <TextView
            android:id="@+id/txt_aceitarKmAlugado"
            android:layout_width="wrap_content"
